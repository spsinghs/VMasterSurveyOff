<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.nic.ceopunjab.voter_master_offline">

    <!-- To auto-complete the email text field in the login form with the user's emails -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="in.nic.ceopunjab.voter_master_offline.GlobalData"
        android:allowBackup="true"
        android:icon="@drawable/ic_assignment_black_24dp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="in.nic.ceopunjab.voter_master_offline.LoginActivity"
            android:label="@string/app_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="in.nic.ceopunjab.voter_master_offline.search"
            android:label="@string/app_search" />
        <activity
            android:name="in.nic.ceopunjab.voter_master_offline.VoterUpdateActivity"
            android:label="@string/app_update" />
        <activity android:name="in.nic.ceopunjab.voter_master_offline.UserActivity" />
        <activity android:name="in.nic.ceopunjab.voter_master_offline.SuperActivity"/>
    </application>

</manifest>